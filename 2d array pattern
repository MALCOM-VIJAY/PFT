#include <stdio.h>
int main()
{
    int mat[4][4]={
      {10,12,33,4},
      {15,6,3,44},
      {1,42,63,77},
      {18,2,93,21},
  };
  int row,col;
  for(int sum=0;sum<=(row+col);sum++){
      for( row=0;row<4;row++){
          for( col=0;col<4;col++){
              if(row+col==sum)
                printf("%d ",mat[row][col]);
          }
      }
      printf("\n");
  }
    
    return 0;
}

output:
10 
12 15 
33 6 1 
4 3 42 18 
44 63 2 
77 93 
21
